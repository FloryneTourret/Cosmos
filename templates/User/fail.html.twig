{% extends 'base.html.twig' %}

{% block body %}

    <h1>Utilisateur : {{ app.user.username }}</h1> <br><br>

    <form method="post" action="{{ path('update_username') }}">
        <div>
            <h2>Changer de pseudo :</h2>
            <input type="text" value="{{ app.user.username }}" name="username" placeholder="Nouveau Pseudo">
            <input type="submit" value="Changer">
        </div>
    </form>

    <form method="post" action="{{ path('update_email') }}">
        <div>
            <h2>Changer d'email :</h2>
            <input type="text" value="{{ app.user.email }}" name="email" placeholder="Nouvel email">
            <input type="submit" value="Changer">
        </div>
    </form>

    <form method="post" action="{{ path('update_password') }}">
        <div>
            <h3 style="color: #F00;">Attention les mots de passe  ne correspondent pas</h3>
            <h2>Changer de mot de passe :</h2>
            <input type="password" name="premier" placeholder="Entrer nouveau mot de passe" required><br>
            <input type="password" name="deuxieme" placeholder="Répéter mot de passe" required>
            <input type="submit" value="Changer">
        </div>
    </form>


{% endblock %}