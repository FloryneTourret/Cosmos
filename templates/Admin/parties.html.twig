{% extends 'base.html.twig' %}

{% block title %}
    Administrateur
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block menu %}{% endblock %}

{% block body %}
    <div class="corps">

        <table>
            <thead>
            <tr>
                <th>Joueur 1</th>
                <th>Joueur 2</th>
                <th>Date de début</th>
                <th>Manche</th>
                <th>Avancement</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for partie in parties %}
                <tr>
                    <td>{{ partie.Joueur1.username }}</td>
                    <td>{{ partie.Joueur2.username }}</td>
                    <td>{{ partie.PartieDate |date("d/m/Y à H:i:s") }}</td>
                    <td>{{ partie.PartieManche }}</td>
                    {%  if partie.PartieTour==9 %}
                    <td>Finie</td>
                    {% else %}
                        <td>Tour n° {{ partie.PartieTour }}</td>
                    {% endif %}
                    <form action="">
                        <td><button type="submit" name="joueur" value="{{ partie.Id }}">Supprimer</button></td>
                    </form>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
