{% extends 'base.html.twig' %}

{% block menu%}{% endblock %}

{% block nav_admin %}{% endblock %}

{% block body %}


    <div class="body">
        <div class="nav">
            <div class="img-logo">

                <img class="logo" src="{{ asset('assets/img/accueil-1/logo.png') }}" alt="">
            </div>
            <ul>

                <li>
                    <a href="{{ path('index') }}" class="hover-underline-animation">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('user_registration') }}" class="hover-underline-animation">Inscription</a>
                </li>
            </ul>
        </div>
        <div class="formulaire">

            <div class="container-fluid justify-content-center">
                <div class="col-8">
                    <div class=" contenu-form">
                        <div class="haut">
                            {% if error %}
                                <div class="alert alert-danger">
                                    <p>Attention, mauvais identifiants</p>
                                </div>
                            {% endif %}
                            <h1>Connexion</h1>
                        </div>
                        <div class="bas ">
                            <form method="post" action="{{ path('security_login') }}">

                                <div class="element-form">
                                    <div class="col-4"> <label for="pseudo">Pseudo :</label></div>
                                    <div class="col-6"><input type="text" id="username" name="_username" value="{{ last_username }}"/></div>

                                </div>
                                <div class="element-form">
                                    <div class="col-4"> <label for="mdp">Mot de passe :</label></div>
                                    <div class="col-6">
                                        <input type="password" id="password" name="_password"/>

                                        <div class="envoyer">
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                            <input type="submit" value="Se connecter" />
                                        </div>
                                    </div>

                                </div>


                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>



    </div>


{% endblock %}